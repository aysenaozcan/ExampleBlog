@model List<CategoryModel>
<h1>Category List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <form method="post" action="/Category/Delete">
                        <input type="hidden" name="categoryId" value="@item.Id" />
                        <button type="submit" class="btn btn-warning">Delete</button>

                    </form>
                </td>
            </tr>
        }

    </tbody>


</table>